    ViewBag.Title = "About";
}

    <section class="site-section pt-5">
        <div class="container">

            <div class="row blog-entries">
                <div class="col-md-12 col-lg-8 main-content">

                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="mb-4">Hello World, My name is Roberto Hernandez</h2>
                            <p class="mb-5"><img src="~/Images/aiBlur_blog.jpg" alt="Image placeholder" class="img-fluid"></p>
